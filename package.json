{
  "name": "healthi-app",
  "version": "2.2.0",
  "description": "Simple app to check your Mac Battery health.",
  "main": "static/js/app.js",
  "scripts": {
    "build": "babel src --presets electron,react --out-dir static/js",
    "pack": "yarn run build && electron-packager . healthi --platform=darwin --arch=x64 --icon=img/healthi.icns --overwrite --out=dist",
    "start": "yarn run build && electron .",
    "test": "xo",
    "prepush": "yarn run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pablopunk/healthi-app.git"
  },
  "keywords": [
    "mac",
    "battery",
    "health",
    "menu",
    "topbar",
    "app"
  ],
  "author": "Pablo Varela",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pablopunk/healthi-app/issues"
  },
  "homepage": "https://github.com/pablopunk/healthi-app#readme",
  "dependencies": {
    "babel-plugin-relative-import": "^1.0.3",
    "electron": "^1.4.3",
    "healthi": "^1.0.8",
    "inline-style-prefixer": "^3.0.2",
    "menubar": "^5.1.0",
    "react": "^15.4.2",
    "react-animated-number": "^0.4.2",
    "react-dom": "^15.4.2",
    "react-fade": "^1.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-electron": "^1.4.15",
    "babel-preset-react": "^6.22.0",
    "electron-packager": "^8.1.0",
    "electron-prebuilt": "^1.4.3",
    "eslint-config-xo-react": "^0.11.0",
    "eslint-plugin-react": "^6.9.0",
    "husky": "^0.13.1",
    "xo": "^0.18.0"
  },
  "xo": {
    "extends": "xo-react",
    "esnext": true,
    "semicolon": false,
    "space": true,
    "ignores": [
      "static/js/**"
    ],
    "envs": [
      "browser"
    ],
    "rules": {
      "new-cap": 0,
      "react/prop-types": 0,
      "import/no-unresolved": 0,
      "react/jsx-no-bind": 0,
      "react/forbid-component-props": 0
    }
  },
  "babel": {
    "plugins": [
      [
        "babel-plugin-relative-import",
        {
          "rootPathSuffix": "static/js"
        }
      ]
    ]
  }
}
